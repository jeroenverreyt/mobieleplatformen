<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS Tarief" />

    <EditText
        android:id="@+id/etSMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gratis sms&apos;en naar eigen netwerk" />

    <CheckBox
        android:id="@+id/cbUnlimitedEn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Onbeperkt" />

    <EditText
        android:id="@+id/etFreeSmsEn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal|text" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gratis sms&apos;en naar elk netwerk" />

    <CheckBox
        android:id="@+id/cbUnlimitedAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Onbeperkt" />

    <EditText
        android:id="@+id/etFreeSmsAn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal|text" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wanneer zijn de gratis sms'en geldig?" />

    <Spinner
        android:id="@+id/spFreeSmsType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bAdjustSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opslaan wijzigingen" />

</LinearLayout>